                    <h1 class="subtitle is-4" style="text-transform: capitalize;" id="weatherDescription1-<%=widget.position%>">Sunny</h1>
                    <h1 class="title is-3" id="weatherTemperature1-<%=widget.position%>">36°</h1>
                    <p id="weatherCity1-<%=widget.position%>" class="pb-4">San Francisco</p>
                </div>
            </div>
            <div class="columns is-gapless weather pl-5 pr-6 pt-5 m-0" id="weatherWidget2-<%=widget.position%>">
                <div class="column">
                    <img src="/img/weather_icon/09n.png" id="weatherIcon2-<%=widget.position%>" />
                </div>
                <div class="column is-narrow">
                    <h1 class="subtitle is-4" style="text-transform: capitalize;" id="weatherDescription2-<%=widget.position%>">Sunny</h1>
                    <h1 class="title is-3" id="weatherTemperature2-<%=widget.position%>">36°</h1>
                    <p id="weatherCity2-<%=widget.position%>" class="pb-4">San Francisco</p>
                </div>
            </div>
        </div>
    </div>
</div>